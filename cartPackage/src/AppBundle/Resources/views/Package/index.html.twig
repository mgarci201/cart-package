{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Hello {{ app.user.username }}</p><a href="{{ path('logout') }}">Logout</a>
    {% endif %}

    <h1>Main Package(s)</h1>
    <p></p>

    <table class="records_list table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Package</th>
                <th>Numbers</th>
                <th>Cost</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('package_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.package }}</td>
                <td>{{ entity.numbers }}</td>
                <td>{{ entity.cost }}</td>
                <td>Test</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('package_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('package_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('package_new') }}">
                Add a new package
            </a>
        </li>
    </ul>

    <button type="submit" class="btn btn-primary" style= "float: right">Proceed to Checkout</button>

    </div>
    {% endblock %}
