{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Hello {{ app.user.username }}</p>
    {% endif %}

    <h1>Package</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Package</th>
                <td>{{ entity.package }}</td>
            </tr>
            <tr>
                <th>Numbers</th>
                <td>{{ entity.numbers }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ entity.cost }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('package') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('package_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
{% endblock %}
